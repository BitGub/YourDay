<p>Sign up</p>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :firstname %><br />
  <%= f.text_field :firstname %></div>
  
    <div><%= f.label :surname %><br />
  <%= f.text_field :surname %></div>
  
    <div><%= f.label :username %><br />
  <%= f.text_field :username %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>
  
    <div><%= f.label :gender %><br />
  <%= f.select :gender, { "Male" => "Male", "Female" => "Female", "It's Complicated" => "It's Complicated"}  %></div>
  
    <div><%= f.label :date_of_birth %><br />
  <%= f.date_field :date_of_birth %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>
